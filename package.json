{
  "name": "cookies-4m-groupies",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "frontend",
    "smart-contracts",
    "backend"
  ],
  "scripts": {
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:preview": "cd frontend && npm run preview",
    "contracts:compile": "cd smart-contracts && npx hardhat compile",
    "contracts:test": "cd smart-contracts && npx hardhat test",
    "contracts:deploy:alfajores": "cd smart-contracts && node --loader ts-node/esm scripts/deploy.ts --network alfajores",
    "contracts:verify:alfajores": "cd smart-contracts && hardhat verify --network alfajores",
    "contracts:deploy:celo": "cd smart-contracts && node --loader ts-node/esm scripts/deploy.ts --network celo",
    "contracts:verify:celo": "cd smart-contracts && hardhat verify --network celo",
    "backend:dev": "cd backend && npm run dev",
    "backend:build": "cd backend && npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "typescript": "^5.2.2"
  }
}
